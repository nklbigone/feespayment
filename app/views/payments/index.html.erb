<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Acdemic year</th>
      <th>Semester</th>
      <th>Payment date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.Amount %></td>
        <td><%= payment.acdemic_year %></td>
        <td><%= payment.semester %></td>
        <td><%= payment.payment_date %></td>
        <td><%= payment.user.last_name %></td>
        <td><%= link_to 'Show', payment, class: 'btn btn-info btn btn-sm' %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment), class: 'btn btn-success btn btn-sm' %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path, class: 'btn btn-light' %>
