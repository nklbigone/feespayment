<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Gender</th>
      <th>National</th>
      <th>Address</th>
      <th>Facult</th>
      <th>Level</th>
      <th>Classes</th>
      <th>User type</th>
      <th>Academic year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.gender %></td>
        <td><%= user.national_id %></td>
        <td><%= user.address %></td>
        <td><%= user.facult_id %></td>
        <td><%= user.level %></td>
        <td><%= user.classes %></td>
        <td><%= user.user_type %></td>
        <td><%= user.academic_year %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-info btn btn-sm'%></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-success btn btn-sm' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-light' %>
